<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.ola.extrashoppinglist.MainActivity">


    <EditText
        android:id="@+id/add_item"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ListView
        android:layout_below="@+id/add_item"
        android:id="@+id/shopping_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="@null"/>
    <TextView
        android:id="@+id/deleted_items_text_view"
        android:layout_below="@+id/shopping_list"
        android:text="Deleted Items"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/deleted_list"
        android:layout_below="@+id/deleted_items_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
